<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Plants">

    <ImageView
        android:id="@+id/img_header"
        android:layout_width="412dp"
        android:layout_height="100dp"
        android:layout_marginTop="-19dp"
        android:src="@drawable/header" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:src="@drawable/container_search"
        android:layout_below="@+id/img_header"
        android:layout_marginTop="-13dp"/>

    <ImageView
        android:id="@+id/ic_search"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:onClick="Search"
        android:src="@drawable/img_search"
        android:layout_below="@+id/img_header"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-13dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_header"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="-2dp"
        android:fontFamily="@font/poppinsregular"
        android:text="3"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/img_cart"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/img_header"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="40dp"
        android:onClick="Cart"
        android:src="@drawable/img_cart"/>

    <ImageView
        android:layout_width="61dp"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="117dp"
        android:onClick="Home"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="124dp"
        android:text="All Live Plants"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:fontFamily="@font/poppinsbold" />

    <ImageView
        android:layout_width="175dp"
        android:layout_height="250dp"
        android:layout_below="@id/txt_1"
        android:layout_marginStart="25dp"
        android:layout_marginTop="34dp"
        android:src="@drawable/container_products" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_marginTop="210dp"
        android:layout_marginStart="32dp"
        android:onClick="DetailProduct"
        app:srcCompat="@drawable/img_flow2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/img1"
        android:text="Aglaonema Wishes"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/poppinssemibold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/img1"
        android:text="Rp 650.000"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/poppinsregular"/>

    <ImageView
        android:layout_width="175dp"
        android:layout_height="250dp"
        android:src="@drawable/container_products"
        android:layout_below="@id/txt_1"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@id/img1"
        android:layout_marginStart="25dp"/>

    <ImageView
        android:id="@+id/img2"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="210dp"
        android:layout_toEndOf="@+id/img1"
        app:srcCompat="@drawable/img_flow1" />

    <TextView
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="228dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/img2"
        android:text="Coffee Plant"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/poppinssemibold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="228dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/img2"
        android:text="Rp 650.000"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/poppinsregular"/>

    <ImageView
        android:layout_width="175dp"
        android:layout_height="250dp"
        android:src="@drawable/container_products"
        android:layout_below="@id/img1"
        android:layout_marginTop="80dp"
        android:layout_marginStart="25dp"/>

    <ImageView
        android:id="@+id/img3"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_below="@id/img1"
        android:layout_marginTop="88dp"
        android:layout_marginStart="32dp"
        app:srcCompat="@drawable/img_flow3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/img3"
        android:text="Philodendron Green"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/poppinssemibold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/img3"
        android:text="Rp 650.000"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/poppinsregular"/>

    <ImageView
        android:layout_width="175dp"
        android:layout_height="250dp"
        android:src="@drawable/container_products"
        android:layout_below="@id/img2"
        android:layout_toEndOf="@id/img3"
        android:layout_marginTop="80dp"
        android:layout_marginStart="25dp"/>

    <ImageView
        android:id="@+id/img4"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:layout_below="@+id/img2"
        android:layout_toEndOf="@id/img3"
        android:layout_marginTop="88dp"
        android:layout_marginStart="33dp"
        app:srcCompat="@drawable/img_flow4" />

    <TextView
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="228dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/img4"
        android:text="Pink Authurium"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/poppinssemibold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="228dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/img4"
        android:text="Rp 650.000"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/poppinsregular"/>


</RelativeLayout>