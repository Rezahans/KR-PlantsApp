<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Address">

    <ImageView
        android:id="@+id/img_header"
        android:layout_width="412dp"
        android:layout_height="100dp"
        android:layout_marginTop="-19dp"
        android:src="@drawable/header" />

    <ImageView
        android:layout_width="61dp"
        android:layout_height="53dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="85dp"
        android:src="@drawable/back"
        android:onClick="Profil"/>

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:text="Shipping Address"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:fontFamily="@font/poppinsbold" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:src="@drawable/container_address"
        android:layout_below="@+id/txt_1"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnChoose"
        android:layout_marginTop="32dp"
        android:src="@drawable/container_address" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Jack Lewis (62 8123450689) Pangeran Antasari Street No. 22, Pejaten, South Jakarta, 23232, Indonesia"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/poppinsregular" />

    <TextView
        android:id="@+id/txt_2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnChoose"
        android:layout_marginTop="50dp"
        android:layout_marginStart="55dp"
        android:text="Rei (62 8123450689) Sunshine Street no. 14, Tulung AgungKediri, West Java, 12291, Indonesia"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/poppinsregular" />

    <Button
        android:id="@+id/btnChoose"
        android:layout_width="101dp"
        android:layout_height="32dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="290dp"
        android:background="@drawable/button_main"
        android:fontFamily="@font/poppinsbold"
        android:text="Choose"
        android:textColor="#fff"/>

    <Button
        android:layout_width="101dp"
        android:layout_height="32dp"
        android:layout_marginStart="50dp"
        android:layout_below="@+id/txt_2"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_main"
        android:fontFamily="@font/poppinsbold"
        android:text="Choose"
        android:textColor="#fff" />

    <ImageView
        android:layout_width="41dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/img_add"
        android:onClick="AddAddress"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/btnChoose"
        android:layout_marginStart="140dp"
        android:layout_marginTop="293dp"
        android:onClick="EditAddress"
        app:srcCompat="@drawable/img_edit"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/btnChoose"
        android:layout_below="@+id/txt_2"
        android:layout_marginStart="140dp"
        android:layout_marginTop="13dp"
        android:onClick="EditAddress"
        app:srcCompat="@drawable/img_edit"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/btnChoose"
        android:layout_marginStart="180dp"
        android:layout_marginTop="288dp"
        android:background="@color/white"
        app:srcCompat="@drawable/img_trash" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/btnChoose"
        android:layout_below="@+id/txt_2"
        android:layout_marginStart="180dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        app:srcCompat="@drawable/img_trash" />


</RelativeLayout>